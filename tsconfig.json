// ts configuration for js compilation
{
  "compilerOptions": {
    "outDir": "app/dist/js", // where .ts files will be compiled to .js
    "target": "ES6", // base language
    "noEmitOnError": true, // does not compile when have any ts error
    "noImplicitAny": true, // does not allow 'any' type in ts code
    "removeComments": true, // remove comments when code is transformed from ts to js
    "strictNullChecks": true, // does not allow implicit null types
    "experimentalDecorators": true, // enables decorators
    "sourceMap": true // compratilha os arquivos .ts no ambiente de desenvolvimento
  },
  "include": [
    "app/src/**/*" // where ts will be placed
  ]
}